{% extends '::base.html.twig' %}

{% block body %}
<center>
<h2>Envoyer un sms</h2>
<form accept="utf-8" method="post" action="{{ path('sms_send') }}">
	<table border="0" width="600px">
		<tr>
			<td>Votre num√©ro: </td>
			<td>{{ form_widget(form.number) }}</td>
		</tr>
		<tr>
			<td>Votre designation: </td>
			<td>{{ form_widget(form.designation) }}</td>
		</tr>
		<tr>
